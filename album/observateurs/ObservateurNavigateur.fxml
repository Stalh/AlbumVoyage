<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="album.controllers.ControllerNavigateur">
    <center>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="buttonPhoto" mnemonicParsing="false" onAction="#photos" onMouseEntered="#mouseEnteredPhoto" onMouseExited="#mouseExitedPhoto" prefHeight="130.0" prefWidth="80.0" style="-fx-background-color: #141414;" text="Photos" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font></Button>
                <Button fx:id="buttonCharger" mnemonicParsing="false" onAction="#charger" onMouseEntered="#mouseEnteredCharger" onMouseExited="#mouseExitedCharger" prefHeight="130.0" prefWidth="80.0" style="-fx-background-color: #141414;" text="Ouvrir" textAlignment="CENTER" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font></Button>
                <Button fx:id="buttonSave" mnemonicParsing="false" onAction="#sauvegarder" onMouseEntered="#mouseEnteredSave" onMouseExited="#mouseExitedSave" prefHeight="130.0" prefWidth="80.0" style="-fx-background-color: #141414;" text="Save" textAlignment="CENTER" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font></Button>
            </children>
        </VBox>
    </center>
</BorderPane>
